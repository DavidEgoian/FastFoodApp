@model Employee
@{
    ViewData["Title"] = "ახალი თანამშრომელი";
}
<h1>თანამშრომლის რეგისტრაცია</h1>

<div class="row">
    <form asp-controller="Home" asp-action="CreatePost">
        <div class="mb-3">
            <label class="form-label" asp-for="Pin"></label>
            <input class="form-control" asp-for="Pin" />
            <span class="text-danger" asp-validation-for="Pin"></span>

        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-success" value="ახალი თანამშრომლის დამატება"/>
        </div>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
